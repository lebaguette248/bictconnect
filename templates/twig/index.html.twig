{% extends 'base.html.twig' %}

{% block title %}Hello TwigController!{% endblock %}

{% block body %}

    <style>
        body {
            font-family: Segoe UI;
        }
        th, td{
            padding: 8px;
        }
        table {
            border-collapse: collapse;
        }
        tr:nth-child(even) {
            background-color: #d7d7d7;
        }
    </style>

    <h1>Alle User</h1>

    <table>
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>Username</th>
            <th>Password</th>
        </tr>

        {% for x in data %}

            <tr>
                <td>{{ x.id }}</td>
                <td>{{ x.name }}</td>
                <td>{{ x.username }}</td>
                <td>{{ x.password }}</td>
            </tr>

        {% endfor %}

    </table>

{% endblock %}
