{% extends 'base.html.twig' %}

{% block title %}Hello TwigController!{% endblock %}

{% block body %}

    <style>
        *   {
            border-color: black;
            border-style: solid;
            border-width: 2px;
        }

        body {
            font-family: Segoe UI;
            margin: 0;
            width: 100vw;
            height: 100vh;

            display: flex;

            overflow: hidden;

            background-color: #362848;
        }

        .makemid    {
            width: 50vw;

            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        th, td{
            padding: 8px;
        }

        table {
            border-collapse: collapse;
        }

        tr:nth-child(even) {
            background-color: #d7d7d7;
        }
    </style>

    <div class="makemid">
        <div >
            <form action="./user" method="POST" class="makemid">
                <input type="text" placeholder="please enter Name">
                <input type="text" placeholder="please enter Username">
                <input type="password" placeholder="please enter Password">
                <input type="submit">
            </form>
        </div>
    </div>
    <div class="makemid" style="margin-right: 0">
    <h1>Alle User</h1>
        <div>
            <table>
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th>Username</th>
                    <th>Password</th>
                </tr>

                {% for x in data %}

                    <tr>
                        <td>{{ x.id }}</td>
                        <td>{{ x.name }}</td>
                        <td>{{ x.username }}</td>
                        <td>{{ x.password }}</td>
                    </tr>

                    <tr>
                        <th colspan="4">Messages</th>
                    </tr>

                    {% for message in x.messages %}
                        <tr>
                            <td colspan="4">{{ message.title }}</td>
                        </tr>
                        <tr>
                            <td colspan="4">{{ message.content }}</td>
                        </tr>
                    {% endfor %}

                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
